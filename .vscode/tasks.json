{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "asparagus",
			"command": "${workspaceFolder}\\mingw-w64\\mingw64\\bin\\gcc.exe",
			"args": [
				"-v",
				"-w",
				"-g",
				"..\\src\\main.c",
				"-o",
				"..\\build\\game.exe",
				"-I",
				"../include",
				"-L",
				"../lib",
				"-m64",
				"-lglad",
				"-lmingw32",
				"-lSDL2main",
				"-lSDL2",
				"-mwindows"
			],
			"options": {
				"cwd": "${workspaceFolder}/scripts"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "exbbat",
			"type": "shell",
			"command": "${workspaceFolder}/scripts/build.bat",
			"options": {
				"cwd": "${workspaceFolder}/scripts"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true
			},
			"problemMatcher": [
				"$gcc"
			]
		}
	]
}